    <style name="text_14.medium.secondary.center_vertical">
        <item name="android:layout_centerVertical">true</item>

    </style>

    <style name="text_14.medium.secondary.layout_gravity_vertical">
        <item name="android:layout_gravity">center_vertical</item>

    </style>

    <style name="text_14.medium.secondary.center_vertical.text_center">
