<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/cr</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.ToolbarImageView">
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tint">@color/toolbar_icon_tint</item>
        <item name="android:background">?selectableItemBackground</item>

    </style>

    <!--text size 14sp-->

    <style name="text_14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_14.light">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="text_14.regular">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="text_14.medium">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_14.light.primary">
        <item name="android:textColor">#DE000000</item>
    </style>

    <style name="text_14.light.secondary">
        <item name="android:textColor">#8A000000</item>
    </style>


    <style name="text_14.regular.primary">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="text_14.regular.secondary">
        <item name="android:textColor">#8A000000</item>
